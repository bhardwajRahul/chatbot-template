# LLM Configuration
MODEL_TYPE=OPENAI                    # Options: OPENAI, VERTEX, LLAMA, AZUREOPENAI
OPENAI_API_KEY=your_openai_api_key   # Your OpenAI API key
BASE_MODEL_NAME=gpt-3.5-turbo       # Base model name to use
MODEL_PATH=                         # Path to LlamaCpp model (for LLAMA)
CREDENTIALS=                        # Path to Vertex AI credentials file (for VERTEX)
SYSTEM_MESSAGE=                     # System message to use in chat prompts

# Azure OpenAI Configuration
AZURE_API_KEY=                      # Your Azure OpenAI API key
AZURE_API_VERSION=2023-05-15        # Azure OpenAI API version
AZURE_ENDPOINT=                     # Azure OpenAI endpoint URL (e.g., https://your-resource.openai.azure.com)
AZURE_DEPLOYMENT_NAME=              # Azure OpenAI deployment name

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/chatbot  # MongoDB connection string
MONGO_USERNAME=                     # MongoDB username
MONGO_PASSWORD=                     # MongoDB password
MONGO_DATABASE=langchain_bot        # MongoDB database name
MONGO_COLLECTION=chatbot            # MongoDB collection name
MONGO_CLUSTER=                      # MongoDB cluster name

# Memory Configuration
MEMORY_TYPE=custom                  # Memory type (custom, mongo)
MEMORY_WINDOW_SIZE=5                # Number of messages to include in context window

# Server Configuration
PORT=8080                           # Server port
LOG_LEVEL=INFO                      # Logging level

# Bot Configuration
AI_PREFIX=AI                        # Prefix for AI messages in the prompt
HUMAN_PREFIX=Human                  # Prefix for human messages in the prompt
MEMORY_KEY=history                  # Key for conversation history

# Miscellaneous
ENABLE_ANONYMIZER=false             # Enable PII anonymization
SERP_API_TOKEN=                     # SERP API token for web search# LLM Configuration
MODEL_TYPE=OPENAI  # Options: OPENAI, AZUREOPENAI, VERTEX, LLAMA
